    <script is:inline>
      function pageState() {
        return {
          lang: localStorage.getItem('lang') || (navigator.language?.startsWith('es') ? 'es' : 'en'),
          init() {
            this.setDocumentLang();
          },
          updateLang(value) {
            if (!value) return;
            this.lang = value;
            this.setDocumentLang();
          },
          setDocumentLang() {
            document.documentElement.setAttribute('data-lang', this.lang);
          }
        };
      }

      function personaSelector() {
        const personas = [
          {
            id: 'productivity',
            titleEs: 'Profesionales multitarea',
            titleEn: 'Multitasking pros',
            itemsEs: [
              'Crea notas y tareas ligadas a un contacto en segundos.',
              'Configura recordatorios recurrentes con seguimiento automático.',
              'Integra tus cuentas de Google Workspace sin duplicados.'
            ],
            itemsEn: [
              'Create notes and tasks linked to any contact in seconds.',
              'Schedule recurring reminders with automatic follow-up.',
              'Sync Google Workspace accounts without duplicates.'
            ]
          },
          {
            id: 'family',
            titleEs: 'Familias y personas mayores',
            titleEn: 'Families & seniors',
            itemsEs: [
              'Modo accesible con botones grandes y temas de alto contraste.',
              'Favoritos con fotos para llamadas de un toque.',
              'Juegos ligeros para entretener mientras esperas.'
            ],
            itemsEn: [
              'Accessible mode with larger buttons and high-contrast themes.',
              'Photo favorites for one-tap calling.',
              'Lightweight games to enjoy while waiting.'
            ]
          },
          {
            id: 'support',
            titleEs: 'Equipos de soporte y ventas',
            titleEn: 'Support & sales teams',
            itemsEs: [
              'Importa leads por QR o CSV y asigna etiquetas inteligentes.',
              'Graba consentimientos (según región) y guarda notas por cliente.',
              'Exporta métricas de llamadas para tu CRM en un clic.'
            ],
            itemsEn: [
              'Import leads via QR or CSV and tag them instantly.',
              'Record consent (region permitting) and keep notes per client.',
              'Export call metrics to your CRM in one click.'
            ]
          }
        ];

        return {
          personas,
          active: personas[0].id,
          lang: document.documentElement.getAttribute('data-lang') || 'es',
          get currentPersona() {
            const persona = personas.find((p) => p.id === this.active) || personas[0];
            return {
              id: persona.id,
              title: this.lang === 'es' ? persona.titleEs : persona.titleEn,
              items: this.lang === 'es' ? persona.itemsEs : persona.itemsEn
            };
          },
          init() {
            window.addEventListener('lang', (event) => {
              this.lang = event.detail || 'es';
            });
          },
          setPersona(id) {
            this.active = id;
          },
          label(persona) {
            return this.lang === 'es' ? persona.titleEs : persona.titleEn;
          }
        };
      }
    </script>
