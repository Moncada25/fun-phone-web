---
export interface Props {
  title: string;
  titleEn?: string;
  bullets: string[];
  bulletsEn?: string[];
}
const { title, titleEn = title, bullets, bulletsEn = bullets } = Astro.props;
---
<section class="group flex flex-col gap-4 rounded-3xl border border-neutral-200 bg-white/80 p-6 shadow-sm transition duration-300 hover:-translate-y-1 hover:border-accent/60 hover:shadow-xl backdrop-blur dark:border-neutral-800 dark:bg-neutral-900/70 dark:hover:border-accent/50">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="text-xl font-semibold text-neutral-900 dark:text-accent">
        <span x-show="lang==='es'">{title}</span>
        <span x-show="lang==='en'">{titleEn}</span>
      </h3>
      <div class="mt-1 h-1 w-12 rounded-full bg-accent/60 transition-all duration-300 group-hover:w-20"></div>
    </div>
    <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-accent/15 text-accent group-hover:bg-accent group-hover:text-white">
      <slot name="icon" />
    </div>
  </div>
  <ul class="space-y-2 text-sm text-neutral-600 dark:text-neutral-300">
    {bullets.map((bullet, index) => (
      <li class="flex items-start gap-2">
        <span class="mt-1 inline-flex h-1.5 w-1.5 flex-shrink-0 translate-y-1 rounded-full bg-accent/80"></span>
        <span>
          <span x-show="lang==='es'">{bullet}</span>
          <span x-show="lang==='en'">{bulletsEn[index] ?? bullet}</span>
        </span>
      </li>
    ))}
  </ul>
</section>
